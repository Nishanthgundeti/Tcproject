@using PagedList;
@using PagedList.Mvc;

@model IPagedList<MvcTest2.Models.User>
@{
    ViewBag.Title = "Index";
}

<h2>Geek Users</h2>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("FirstName","Index", new {sortBy = ViewBag.SortFirstNParam })
           
        </th>
        <th>
            @Html.ActionLink("LastName", "Index", new { sortBy = ViewBag.SortLastNParam })
           
        </th>
        <th>
            @Html.ActionLink("LastName", "Index", new { sortBy = ViewBag.SortSkillParam })
       
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skills)
            </td>          
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new {page , sortby = Request["sortby"] }))

